	</function>
 -->

	
	<function id="fnc_khh"  class="com.web.framework.commet.FunctionKHH"  >
		<gun ref="gun_khh" />
	</function>
	<function id="fnc_khh2"  class="com.web.framework.commet.FunctionKHH"  >
		<gun id="gun_khh"   class="com.web.framework.commet.GunKHH"  interval="1000" ></gun>
	</function>

	
	<function id="fnc_good"  class="com.web.framework.commet.FunctionKHH"  pair="true">
		<gun id="gun_khh"   class="com.web.framework.commet.GunHHK"  interval="1000"  pair="true"></gun>
	</function>
	
	
	<function id="fnc_hhkhh2"  class="com.web.framework.commet.FunctionHHKHH"  pair="true'">
		<gun ref="gun_hhk" />
		<gun id="gun_khh"   class="com.web.framework.commet.GunKHH"  interval="1000"  pair="true"></gun>
	</function>


</shot>